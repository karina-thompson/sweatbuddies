<div class="container" id="signupForm">
<div id="profileCreate">
<h2>Create your profile</h2>
</div>
<form action="/user" method="post">
  <div class="form-group">
    <label for="email">Email address:</label>
    <input type="email" class="form-control" name="email">
  </div>
   <div class="form-group">
    <label for="username">Username:</label>
    <input type="text" class="form-control" name="user_name">
  </div>
  <div class="form-group">
    <label for="pwd">Password:</label>
    <input type="password" class="form-control" name="password">
  </div>
   <div class="form-group">
    <label for="location">Location:</label>
    <input type="text" class="form-control" name="location">
  </div>
   <div class="form-group">
    <label for="greeting">Introduce Yourself:</label>
    <textarea class="form-control" id="greeting" rows=5 name="greeting">
    </textarea>
  </div>
  
  <h3>I am interested in:</h3>
  <div class="form-group" id="chooseInterests">

  <% @interests.each do |interest| %>  
  <label class="checkbox">  
      <input type="checkbox" id="checkbox<%= interest.id %>" value="<%= interest.id %>" name="interests[]"><%= interest.name %>
  </label>
  <% end %>
  
  </div>
    
  <button type="Sign up" class="btn btn-default">Create Profile</button>
</form>
</div>